{
  "hosting": {
    "public": "/",
    "emulators": {
      "hosting": {
        "host": "http://localhost",
        "port": "5000"
      },
      "functions": {
        "port": "5001"
      }
    },
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
